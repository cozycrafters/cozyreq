{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ty": {
      "command": ["uv", "run", "ty", "server"],
      "extensions": [".py", ".pyi"]
    }
  },
  "mcp": {
    "Linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:LINEAR_API_KEY}"
      }
    }
  }
}
